@namespace BlazorStrap
@inherits BlazorStrapBase
@if (IsResponsive)
{
    <div class="table-responsive bs-table-responsive">
        <table class="@ClassBuilder" @attributes="Attributes">
            @ChildContent
        </table>
    </div>
}
else
{
    <table class="@ClassBuilder" @attributes="Attributes">
        @ChildContent
    </table>
}